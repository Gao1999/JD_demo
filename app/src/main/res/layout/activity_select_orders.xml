<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.shopping.view.SelectOrdersActivity">

    <LinearLayout
        android:id="@+id/SelectOrder_linear"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SelectOrder_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="姓名:123456789"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/SelectOrder_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="手机号:123456789"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/SelectOrder_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="默认收货地址:123456789"
            android:textSize="28dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="(点击收货地址,来改变默认地址或者修改地址)"
            android:textColor="#f00"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/SelectOrder_dzf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待支付"
            android:textColor="#f00"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/SelectOrder_yzf"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已支付"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/SelectOrder_yqx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="已取消"
            android:textSize="24dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/SelectOrder_recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp" />
</LinearLayout>